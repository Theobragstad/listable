<% if (locals.message) { %>
    <div class="text-center" style="position:absolute;top:10px;margin-left: auto;margin-right: auto;left: 0;right: 0;text-align: center;width:550px">
        <% if(locals.error) { %>
            <button class="btn message" style="font-size:12px;border-radius:10;background-color:#ececec; color:#ff0000;border-color:#ff0000;" disabled>
                <%= message %> 
            </button>
        <% } else { %>
            <button class="btn message" style="font-size:12px;border-radius:10;border-color:#000000;background-color:#ececec;color:#000000" disabled>
                <%= message %> 
            </button>
        <% } %>
    </div>
<% } %>

<script>
    var message = document.querySelector(".btn.message");
    if(message !== null) {
        setTimeout(function() {bootstrap.Alert.getOrCreateInstance(message).close();}, 6000);
    }
</script>