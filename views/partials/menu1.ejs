  <script>
  
    function hideLogo() {
      if(window.innerWidth <= 500) {
        document.getElementById('logoName').setAttribute('hidden', 'true');
        document.getElementById('brain').style.setProperty('width', '25px');
        document.getElementById('logo').style.setProperty('top', '2px');
        document.getElementById('logo').style.setProperty('left', '2px');

      }
      else {
        document.getElementById('logoName').removeAttribute('hidden');
        document.getElementById('brain').style.setProperty('width', '60px');
        document.getElementById('logo').style.setProperty('top', '10px');
        document.getElementById('logo').style.setProperty('left', '10px');
      }
    }
  
    function setTextColor(element, color) {
      element.style.color = color;
    }
  
    hideLogo();
  
  </script>