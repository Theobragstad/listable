    <% } else if(filterByLabel) { %>
      <h4 class="site-title">
        <%= label %>
      </h4>
      <h6 class="site-title">label</h6>
      <% if(searchInLabel) { %>
        <h6 class="site-title">search results</h6>
      <% } %>
    <% } else { %>
      <h4 class="site-title">lists</h4>
    <% } %>

    <div style="padding-top:5px;padding-bottom:5px">
