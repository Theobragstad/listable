<%- include ('../partials/header') %>

<link rel="stylesheet" href="/css/style.css">
<script src="/js/script.js"></script>



<main>

    <div class="logo" style="position:absolute; top:10px; left:10px">
        <img src="/img/brain.svg" style="width:40px;"><span style="padding-left:4px; font-weight: bold;color:#f289ca">lists</span>
    </div>



    <button class="btn rounded-0 pull-right " style="border-color:#f289ca;background-color:#ffe6ee;position:absolute; top:10px; right:50px;font-size:12px" disabled><%= user.name.givenName %></button> 
    <!-- <a href="http://<%= hostUrl %>/auth/signout" class="btn rounded-0 pull-right"style="position:absolute;top:10px; right:5px;border-color:#000000;background-color:#ececec;font-size:11px">←</a> -->
    <a href="/logout" class="btn rounded-0 pull-right"style="position:absolute;top:10px; right:5px;border-color:#000000;background-color:#ececec;font-size:11px">←</a>

    <div class="text-center" style="padding-top:50px;color:#f289ca">
        <h6>your lists</h6>
        <div style="padding-top:5px;padding-bottom:5px">
          <input type="text" id="search" name="search" class="search-hover">

      </div>
        <button data-bs-toggle="modal" data-bs-target="#exampleModal" type="button" href="#addListModal" data-toggle="modal" class="btn rounded-0" style="border-color:#f289ca;background-color:#ffe6ee;padding: .25rem .4rem;line-height: .75;">+</button>
        
      </div>



    


      


  <div class="modal"  id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" >
    <div class="modal-dialog "style="" >
      <div class="modal-content rounded-0">
            <input class="form-control rounded-0" type="text" maxlength="34" value="new note">

    
        <button type="button" class="btn rounded-0" style="border-color:#f289ca;background-color:#ffe6ee;padding: .25rem .4rem;line-height: .75;">+</button>

        <div class="modal-body">
            <textarea onInput="handleInput(event)" id="textarea" class="form-control rounded-0" rows="25" ></textarea>
        </div>

      </div>
      
    </div>
  </div>


 

</main>

<%- include ('../partials/footer') %>


